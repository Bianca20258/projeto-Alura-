  <script>
    let fonte = 16;
    const menu = document.getElementById("acessibilidade");
    const btn = document.getElementById("btnAcessibilidade");

    btn.addEventListener("click", () => {
      menu.classList.toggle("ativo");
    });

    function aumentarFonte() {
      fonte += 2;
      document.body.style.fontSize = fonte + "px";
    }

    function diminuirFonte() {
      if (fonte > 10) {
        fonte -= 2;
        document.body.style.fontSize = fonte + "px";
      }
    }

    function modoContraste() {
      document.body.classList.toggle("contraste");
    }

    function modoEscuro() {
      document.body.classList.toggle("escuro");
    }

    function modoLeitura() {
      document.body.classList.toggle("modo-leitura");
    }

    function resetar() {
      fonte = 16;
      document.body.style.fontSize = "16px";
      document.body.classList.remove("contraste", "escuro", "modo-leitura");
    }
  </script>
</body>
